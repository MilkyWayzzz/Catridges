@model IEnumerable<Catridges.Domain.Entity.Catridge>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
<br/>
<h2>Картриджи. Модуль управления картриджами.</h2>
<br/>
<div class="table-active">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>#</th>
            <th>Модель</th>
        </tr>
        </thead>
        <tbody>
        @{
            int i = 1;
            foreach (var item in @Model)
            {
                <tr>
                    <td width="40">@i</td>
                    <td width="*">@item.Model</td>
                    <td width="80"><a class="btn btn-outline-dark" asp-controller="Catridge" asp-action="GetCatridge" asp-route-id="@item.Id">Открыть</a></td>
                    <td width="80"><a class="btn btn-outline-dark" asp-controller="Catridge" asp-action="UpdateCatridge" asp-route-id="@item.Id">Изменить</a></td>
                    <td width="80"><a class="btn btn-outline-dark" asp-controller="Catridge" asp-action="DeleteCatridge" asp-route-id="@item.Id">Удалить</a></td>
                </tr>
                i++;
            }
        }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-dark text-white text-center"  asp-controller="Catridge" asp-action="CreateCatridge">Добавить картридж</a>
</div>

</body>