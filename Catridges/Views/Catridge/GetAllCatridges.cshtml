@model IEnumerable<Catridges.Domain.Entity.Catridge>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<main class="col-md-9 ms-sm-auto col-lg-auto px-md-5">
    <h2>Картриджи. Модуль управления картриджами.</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Модель</th>
              </tr>
            </thead>
            <tbody>
            @{
                int i = 1;
                foreach (var item in @Model)
                {
                    <tr>
                        <td width="40">@i</td>
                        <td width="*">@item.Model</td>
                        <td width="20"><a class="btn-outline-dark" asp-controller="Catridge" asp-action="GetCatridge" asp-route-id="@item.Id">Открыть</a></td>
                        <td width="20"><a class="btn-outline-dark" asp-controller="Catridge" asp-action="UpdateCatridge" asp-route-id="@item.Id">Изменить</a></td>
                        <td width="20"><a class="btn-outline-dark" asp-controller="Catridge" asp-action="DeleteCatridge" asp-route-id="@item.Id">Удалить</a></td>
                    </tr>
                    i++;
                }
            }
            </tbody>
          </table>
        </div>
      </main>
