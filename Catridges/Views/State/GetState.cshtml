@model Catridges.Domain.Entity.State

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<body>
<br/>
<h2>Статусы. Просмотр статуса @Model.Name.</h2>
<br/>
<div class="table-active">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Наименование</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td width="40">1</td>
            <td width="*">@Model.Name</td>
            <td width="80"><a class="btn btn-outline-dark" asp-controller="State" asp-action="UpdateState" asp-route-id="@Model.Id">Изменить</a></td>
            <td width="80"><a class="btn btn-outline-dark" asp-controller="State" asp-action="DeleteState" asp-route-id="@Model.Id">Удалить</a></td>
        </tr>
        </tbody>
    </table>
    <div style="position: center" >
        <a class="btn btn-dark"  asp-controller="State" asp-action="GetAllStates">Назад</a>
    </div>
</div>
</body>
