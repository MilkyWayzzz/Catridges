@model IEnumerable<Catridges.Domain.Entity.State>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<body>
<br/>
<h2>Статусы. Модуль управления статусами.</h2>
<br/>
<div class="table-active">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>#</th>
            <th>Наименование</th>
        </tr>
        </thead>
        <tbody>
        @{
            if (@Model != null)
            {
                int i = 1;
                foreach (var item in @Model)
                {
                    <tr>
                        <td width="40">@i</td>
                        <td width="*">@item.Name</td>
                        <td width="80"><a class="btn btn-outline-dark" asp-controller="State" asp-action="GetState" asp-route-id="@item.Id">Открыть</a></td>
                        <td width="80"><a class="btn btn-outline-dark" asp-controller="State" asp-action="UpdateState" asp-route-id="@item.Id">Изменить</a></td>
                        <td width="80"><a class="btn btn-outline-dark" asp-controller="State" asp-action="DeleteState" asp-route-id="@item.Id">Удалить</a></td>
                    </tr>
                    i++;
                }  
            }
        }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-dark text-white text-center"  asp-controller="State" asp-action="CreateState">Добавить статус</a>
</div>

</body>



